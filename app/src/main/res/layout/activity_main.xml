<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.yuxin.zcommoncomponents.ui.widget.ZFloatOpitionView
            android:id="@+id/main_float"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:ZItemHeight="45dp"
            app:zIsRadio="true"
            app:zNormalBgColor="#f4f4f4"
            app:zNormalTextColor="#565656"
            app:zSelectBgColor="#DFF4EF"
            app:zSelectTextColor="#4BC195"
            app:zTitle="类型" />
    </LinearLayout>

</LinearLayout>